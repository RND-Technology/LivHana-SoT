{
  "name": "livhana-sot",
  "version": "1.0.0",
  "description": "LivHana-SoT: Single source of truth, system of thoughts, state of truthfulness - Tri-une meaning, purpose. Tier 1 Services.",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:watch": "playwright test --watch",
    "start:voice-service:test": "NODE_ENV=test node backend/voice-service/src/index.js",
    "start:reasoning-gateway:test": "NODE_ENV=test node backend/reasoning-gateway/src/index.js",
    "start:frontend:test": "NODE_ENV=test npm run dev --prefix frontend/vibe-cockpit",
    "dev": "concurrently \"npm run build:watch\" \"npm run test:watch\"",
    "optimize": "npm run build && echo 'âœ… Build complete'",
    "tier1": "npm run optimize && echo 'âœ… Tier 1 Option A optimization complete'",
    "performance": "npm run build && npm run test && echo 'ðŸš€ Performance check complete'"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "adm-zip": "^0.5.16",
    "express": "^5.1.0",
    "openai": "^6.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
