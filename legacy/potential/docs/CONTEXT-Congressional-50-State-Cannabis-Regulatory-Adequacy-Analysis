import { useState, useEffect } from 'react';

export default function AuthenticityTimeline() {
  const [currentStat, setCurrentStat] = useState(0);
  
  const stats = [
    { icon: "ğŸ–ï¸", text: "Marine Veteran", desc: "Service & Sacrifice" },
    { icon: "ğŸŒ¿", text: "38 Years Smokin", desc: "Generational Authenticity" },
    { icon: "ğŸŒ±", text: "34 Years Growing", desc: "Master Cultivator" },
    { icon: "ğŸ’°", text: "32 Years Selling", desc: "Real Commerce" },
    { icon: "ğŸ’»", text: "27 Years Online", desc: "Digital Pioneer" },
    { icon: "ğŸš€", text: "26-Year Entrepreneur", desc: "Multiple Exits" }
  ];
  
  useEffect(() => {
    const interval = setInterval(() => {
      setCurrentStat((prev) => (prev + 1) % stats.length);
    }, 2000);
    return () => clearInterval(interval);
  }, []);

  return (
    <div className="bg-black bg-opacity-70 rounded-lg p-6 mb-8 border-2 border-red-500">
      <div className="text-4xl mb-2">ğŸ¤ </div>
      <h3 className="text-3xl font-bold mb-4 text-yellow-400">JESSE NIESEN</h3>
      
      {/* Rotating Stats */}
      <div className="h-20 flex items-center justify-center">
        <div key={currentStat} className="text-center animate-fade-in">
          <div className="text-2xl mb-1">{stats[currentStat].icon}</div>
          <div className="text-xl font-bold text-red-400">{stats[currentStat].text}</div>
          <div className="text-sm text-gray-300">{stats[currentStat].desc}</div>
        </div>
      </div>
      
      <blockquote className="text-xl italic mt-4 text-center border-l-4 border-red-500 pl-4">
        "Texas doesn't ask permission to be FREE"
      </blockquote>
      
      <button className="mt-4 bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-6 rounded-full">
        [HEAR HIS STORY]
      </button>
    </div>
  );
}
