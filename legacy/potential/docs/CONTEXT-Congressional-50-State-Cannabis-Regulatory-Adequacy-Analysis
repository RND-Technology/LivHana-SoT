import { useState, useEffect } from 'react';

export default function ActionEngine() {
  const [supporters, setSupporters] = useState(234567);
  const [districts, setDistricts] = useState(187);
  const [shares, setShares] = useState(45892);

  useEffect(() => {
    // Simulate live counter updates
    const interval = setInterval(() => {
      setSupporters(prev => prev + Math.floor(Math.random() * 5));
      if (Math.random() > 0.8) {
        setDistricts(prev => prev + 1);
      }
      setShares(prev => prev + Math.floor(Math.random() * 3));
    }, 3000);
    
    return () => clearInterval(interval);
  }, []);

  return (
    <section className="bg-blue-900 py-16 px-4">
