{
  "mcpServers": {
    "livhana-sovereign-ai": {
      "command": "python",
      "args": ["src/core/mcp_server.py"],
      "cwd": "/Users/jesseniesen/livhana-local/LivHana-SoT",
      "env": {
        "MCP_ENABLED": "true",
        "MCP_HOST": "localhost",
        "MCP_PORT": "8765",
        "MCP_SERVER_NAME": "LivHana-MCP-Server",
        "MCP_VERSION": "1.0.0",
        "MCP_DESCRIPTION": "Sovereign AI Agent Swarm with Local LLM Integration and Truth Verification",
        "API_BASE_URL": "http://localhost:8000",
        "MCP_CLIENT_TIMEOUT": "30",
        "MCP_MAX_RETRIES": "3",
        "MCP_RETRY_DELAY": "1.0",
        "COPILOT_MCP_ENABLED": "true",
        "COPILOT_API_KEY": "${COPILOT_API_KEY}",
        "COPILOT_WORKSPACE_ID": "${COPILOT_WORKSPACE_ID}",
        "DEBUG_MODE": "false",
        "LOG_LEVEL": "INFO"
      },
      "capabilities": {
        "tools": [
          "chat_with_agent",
          "get_system_health",
          "list_agents",
          "get_metrics",
          "verify_truth",
          "get_agent_response"
        ],
        "resources": [
          "system://status",
          "system://agents",
          "system://config",
          "compliance://rules"
        ],
        "logging": true
      },
      "timeout": 30000,
      "retries": 3,
      "retryDelay": 1000,
      "description": "LivHana Sovereign AI Agent Swarm - Complete cannabis business empire management with truth verification, compliance enforcement, and multi-agent coordination.",
      "version": "1.0.0",
      "author": "Jesse Niesen <jesse@reggieanddro.com>",
      "license": "MIT",
      "repository": "https://github.com/RND-Technology/LivHana-SoT",
      "keywords": [
        "cannabis",
        "ai-agent",
        "sovereign-ai",
        "truth-verification",
        "compliance",
        "multi-agent",
        "deepseek",
        "mcp"
      ]
    }
  },
  "client": {
    "name": "CoPilot+ MCP Client",
    "version": "1.0.0",
    "environment": {
      "platform": "macOS",
      "architecture": "arm64",
      "nodeVersion": ">=18.0.0",
      "pythonVersion": ">=3.11.0"
    },
    "configuration": {
      "autoStart": true,
      "healthCheckInterval": 30000,
      "connectionTimeout": 30000,
      "maxConcurrentRequests": 10,
      "enableLogging": true,
      "logLevel": "INFO",
      "enableMetrics": true,
      "metricsInterval": 60000
    },
    "integrations": {
      "replit": {
        "enabled": true,
        "clientId": "${REPLIT_MCP_CLIENT_ID}",
        "token": "${REPLIT_MCP_TOKEN}",
        "workspace": "livhana-sovereign-ai"
      },
      "github": {
        "enabled": true,
        "repository": "RND-Technology/LivHana-SoT",
        "branch": "main",
        "autoCommit": true
      },
      "monitoring": {
        "prometheus": {
          "enabled": true,
          "endpoint": "http://localhost:9090",
          "metricsPrefix": "livhana_mcp"
        },
        "grafana": {
          "enabled": true,
          "endpoint": "http://localhost:3000",
          "dashboard": "livhana-sovereign-ai"
        }
      }
    }
  },
  "security": {
    "allowlistedDomains": [
      "localhost",
      "127.0.0.1",
      "reggieanddro.com",
      "highnooncartoon.com",
      "oneplantsolution.com",
      "herbitrage.com"
    ],
    "corsOrigins": [
      "https://copilot.microsoft.com",
      "https://github.com",
      "https://replit.com",
      "http://localhost:3000",
      "http://localhost:8000",
      "http://localhost:8765"
    ],
    "apiKeys": {
      "required": ["COPILOT_API_KEY"],
      "optional": ["REPLIT_MCP_TOKEN", "GITHUB_TOKEN"]
    }
  },
  "agents": {
    "liv_hana": {
      "name": "Liv Hana",
      "role": "Executive Assistant & Strategic Coordinator",
      "description": "Master coordination agent for the LivHana system",
      "capabilities": ["strategy", "coordination", "planning", "execution"],
      "default": true
    },
    "captain_cannabis": {
      "name": "Captain Cannabis",
      "role": "Cannabis Industry Knowledge & Compliance",
      "description": "Specialist in cannabis industry regulations and compliance",
      "capabilities": ["industry-knowledge", "compliance", "coa-validation", "regulatory-analysis"]
    },
    "major_quality": {
      "name": "Major Quality",
      "role": "Compliance & Quality Assurance",
      "description": "Ensures all content meets LivHana compliance standards",
      "capabilities": ["compliance-filtering", "quality-assurance", "content-review"]
    },
    "major_growth": {
      "name": "Major Growth",
      "role": "Search & Growth Optimization",
      "description": "Focuses on SEO, content optimization, and growth metrics",
      "capabilities": ["seo", "growth-optimization", "content-strategy", "analytics"]
    },
    "captain_capitol": {
      "name": "Captain Capitol",
      "role": "Intelligence & Policy Analysis",
      "description": "Legislative analysis and policy tracking specialist",
      "capabilities": ["policy-analysis", "legislative-tracking", "intelligence-gathering"]
    },
    "major_funny": {
      "name": "Major Funny",
      "role": "Tools & Integration Specialist",
      "description": "Integration and optimization of all LivHana tools and systems",
      "capabilities": ["tool-integration", "system-optimization", "process-automation"]
    },
    "correction_agent": {
      "name": "Correction Agent",
      "role": "Truth Verification & Correction",
      "description": "Specialized agent for correcting responses that fail verification",
      "capabilities": ["truth-verification", "correction", "fact-checking", "accuracy"]
    }
  },
  "compliance": {
    "enabled": true,
    "rules": {
      "age_verification": "21+ only",
      "medical_claims": "No medical claims whatsoever",
      "cannabinoids": "Natural cannabinoids only",
      "validation": "NIST-validated methods",
      "brands": "Brands are not characters",
      "satire": "Satire for public figures only"
    },
    "enforcement": "strict",
    "autoCorrect": true,
    "flagViolations": true
  }
}
