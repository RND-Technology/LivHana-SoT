# ===== EMPIRE EMPIRE CLOUD COCKPIT - ENVIRONMENT VARIABLES =====

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/empire_cockpit?schema=public"

# App
NEXT_PUBLIC_APP_URL="http://localhost:5174"
NEXT_PUBLIC_API_URL="http://localhost:5174/api"
NODE_ENV="development"

# Authentication
NEXTAUTH_URL="http://localhost:5174"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Square POS
SQUARE_ACCESS_TOKEN="your-square-access-token"
SQUARE_LOCATION_ID="your-location-id"
SQUARE_ENVIRONMENT="sandbox" # or "production"

# Lightspeed X-Series
LIGHTSPEED_API_KEY="your-lightspeed-api-key"
LIGHTSPEED_ACCOUNT_ID="your-account-id"
LIGHTSPEED_API_SECRET="your-api-secret"

# Age Verification
AGECHECKER_API_KEY="your-agechecker-api-key"
AGECHECKER_SITE_ID="your-site-id"

# YouTube Data API v3
YOUTUBE_API_KEY="your-youtube-api-key"
YOUTUBE_CHANNEL_ID="your-channel-id"

# Email (SendGrid or Resend)
EMAIL_PROVIDER="sendgrid" # or "resend"
SENDGRID_API_KEY="your-sendgrid-key"
RESEND_API_KEY="your-resend-key"
EMAIL_FROM="noreply@empireempire.com"

# Google Cloud Platform
GCP_PROJECT_ID="your-gcp-project-id"
GCP_REGION="us-central1"
GCP_CREDENTIALS_JSON="base64-encoded-service-account-json"

# Redis (for caching)
REDIS_URL="redis://localhost:6379"

# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn"
SENTRY_ENVIRONMENT="development"

# New Relic (APM)
NEW_RELIC_LICENSE_KEY="your-license-key"
NEW_RELIC_APP_NAME="Empire Empire Cockpit"

# Feature Flags
FEATURE_HERBITRAGE_GREEKS="true"
FEATURE_VIP_COCKPIT="true"
FEATURE_RAFFLE_SYSTEM="true"
FEATURE_POLICY_ENGINE="true"

# Compliance
MIN_AGE_REQUIREMENT="21"
MAX_THC_PERCENT="0.3"
NIST_COA_VALIDATION="true"

# Gamification
XP_PER_EPISODE="25"
XP_PER_PETITION="50"
XP_PER_ORDER="100"
XP_PER_REFERRAL="150"
