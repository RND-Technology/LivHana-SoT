# VIDEO PRODUCTION PIPELINE - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# CORE AI SERVICES
# ============================================================================

# Anthropic (for script generation)
ANTHROPIC_API_KEY=sk-ant-api03-...

# ElevenLabs (text-to-speech)
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=...

# OpenAI (DALL-E 3 image generation)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# D-ID (lip-sync video generation)
# Get your API key from: https://studio.d-id.com/account-settings
D_ID_API_KEY=...

# Suno (music generation - using third-party API)
# Official API in development, using third-party for now
SUNO_API_KEY=...
SUNO_API_ENDPOINT=https://api.sunoapi.com/api/v1

# ============================================================================
# DISTRIBUTION PLATFORMS
# ============================================================================

# YouTube Data API v3
# Setup: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Authorize and get refresh token
YOUTUBE_CLIENT_ID=...apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=...
YOUTUBE_REFRESH_TOKEN=...

# TikTok Content Posting API
# Setup: https://developers.tiktok.com/
# 1. Create app
# 2. Request Content Posting API access
# 3. Get user access token
TIKTOK_ACCESS_TOKEN=...

# Instagram Graph API
# Setup: https://developers.facebook.com/apps/
# 1. Create Facebook app
# 2. Add Instagram Graph API
# 3. Get user access token and page ID
INSTAGRAM_ACCESS_TOKEN=...
FACEBOOK_PAGE_ID=...

# ============================================================================
# GOOGLE CLOUD PLATFORM
# ============================================================================

# Google Cloud Storage (for video hosting)
# Setup: https://console.cloud.google.com/
# 1. Create service account
# 2. Download JSON key file
# 3. Grant Storage Admin role
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# GCS Bucket for episodes (create bucket first)
GCS_BUCKET_NAME=hnc-episodes-prod

# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Rate limiting (requests per minute)
RATE_LIMIT_ELEVENLABS=60
RATE_LIMIT_OPENAI=50
RATE_LIMIT_DID=30
RATE_LIMIT_SUNO=10

# Retry configuration
MAX_RETRIES=3
RETRY_BASE_DELAY_MS=2000

# Video quality settings
VIDEO_QUALITY=high        # Options: low, medium, high
DALLE_QUALITY=standard    # Options: standard, hd
FFMPEG_PRESET=slow        # Options: ultrafast, fast, medium, slow

# Parallel processing (use with caution)
ENABLE_PARALLEL_PROCESSING=false
MAX_PARALLEL_EPISODES=3

# Debug mode
DEBUG=false
VERBOSE_LOGGING=false

# ============================================================================
# COST ALERTS (optional)
# ============================================================================

# Set maximum cost per episode (in USD)
MAX_COST_PER_EPISODE=3.00

# Set daily budget limit (in USD)
DAILY_BUDGET_LIMIT=50.00

# Email for cost alerts (optional)
COST_ALERT_EMAIL=admin@livhana.com

# ============================================================================
# MONITORING & ALERTING (optional)
# ============================================================================

# Slack webhook for production notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Sentry DSN for error tracking
SENTRY_DSN=https://...@sentry.io/...

# Datadog API key for metrics
DATADOG_API_KEY=...

# ============================================================================
# NOTES
# ============================================================================

# SECURITY:
# - Never commit this file with real API keys
# - Add .env to .gitignore
# - Use 1Password or similar for team secret sharing
# - Rotate keys regularly (every 90 days)

# COSTS:
# - ElevenLabs: ~$0.15 per episode
# - OpenAI: ~$0.32 per episode
# - D-ID: ~$1.25 per episode
# - Suno: ~$0.10 per episode
# - Total: ~$1.85 per episode

# RATE LIMITS:
# - ElevenLabs: 60 req/min
# - OpenAI: 50 images/min
# - D-ID: 30 req/min
# - YouTube: 10,000 quota units/day
# - TikTok: Varies by app approval level
# - Instagram: 200 calls/hour per user

# STORAGE:
# - Each final video: ~50-100 MB
# - Assets cached: ~200 MB per episode
# - Monthly storage (20 episodes): ~4 GB
