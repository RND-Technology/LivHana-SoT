{
  "framework_id": "rpm_competition_v1",
  "framework_name": "RPM DNA Competition & Measurement System",
  "version": "1.0.0",
  "created": "2025-10-21T20:30:00Z",
  "description": "Systematic framework for measuring and scoring all predictions (human + AI) with ROI/$/Day as king metric and cash flow ruling business decisions within guardrails",
  
  "king_metrics": {
    "primary": {
      "name": "ROI_PER_DAY",
      "formula": "(actual_profit - actual_cost) / actual_days_elapsed",
      "unit": "$/day",
      "weight": 0.50,
      "description": "King metric - daily return on investment"
    },
    "ruler": {
      "name": "PASSIVE_CASH_FLOW",
      "formula": "monthly_recurring_revenue - monthly_fixed_costs",
      "unit": "$/month",
      "weight": 0.30,
      "description": "Ruler of business decisions - passive profit sustainability"
    },
    "accuracy": {
      "name": "PREDICTION_ACCURACY",
      "formula": "1 - (abs(projected - actual) / projected)",
      "unit": "%",
      "weight": 0.20,
      "description": "How accurate were the predictions across all dimensions"
    }
  },

  "prediction_dimensions": {
    "timeframe": {
      "metric_name": "timeframe_accuracy",
      "formula": "1 - (abs(projected_hours - actual_hours) / projected_hours)",
      "unit": "%",
      "weight": 0.30,
      "guardrails": {
        "min_acceptable": 0.70,
        "warn_below": 0.80,
        "excellent_above": 0.95
      }
    },
    "cost": {
      "metric_name": "cost_accuracy",
      "formula": "1 - (abs(projected_cost - actual_cost) / projected_cost)",
      "unit": "%",
      "weight": 0.30,
      "guardrails": {
        "min_acceptable": 0.75,
        "warn_below": 0.85,
        "excellent_above": 0.95
      }
    },
    "roi": {
      "metric_name": "roi_accuracy",
      "formula": "1 - (abs(projected_roi - actual_roi) / projected_roi)",
      "unit": "%",
      "weight": 0.40,
      "guardrails": {
        "min_acceptable": 0.65,
        "warn_below": 0.80,
        "excellent_above": 0.90
      },
      "description": "Most important accuracy metric - getting ROI right matters most"
    }
  },

  "composite_score": {
    "formula": "(timeframe_accuracy * 0.30) + (cost_accuracy * 0.30) + (roi_accuracy * 0.40)",
    "unit": "score (0-1)",
    "grade_bands": {
      "S_TIER": {"min": 0.95, "label": "Exceptional", "emoji": "🏆"},
      "A_TIER": {"min": 0.90, "label": "Excellent", "emoji": "🥇"},
      "B_TIER": {"min": 0.80, "label": "Good", "emoji": "🥈"},
      "C_TIER": {"min": 0.70, "label": "Acceptable", "emoji": "🥉"},
      "D_TIER": {"min": 0.60, "label": "Warning", "emoji": "⚠️"},
      "F_TIER": {"min": 0.00, "label": "Failing", "emoji": "🔴"}
    }
  },

