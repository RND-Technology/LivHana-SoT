# DELIVERY SERVICE ENVIRONMENT VARIABLES

# Service Configuration
NODE_ENV=production
PORT=3007

# Store Location (for pickup)
STORE_ADDRESS=123 Main St, San Antonio, TX 78201
STORE_PHONE=+12109999999
STORE_LAT=29.4241
STORE_LNG=-98.4936

# DoorDash Drive API (Primary Provider)
DOORDASH_DEVELOPER_ID=your_developer_id
DOORDASH_KEY_ID=your_key_id
DOORDASH_SIGNING_SECRET=your_signing_secret
DOORDASH_BASE_URL=https://openapi.doordash.com

# Uber Direct API (Secondary Provider)
UBER_CUSTOMER_ID=your_customer_id
UBER_API_KEY=your_api_key
UBER_BASE_URL=https://api.uber.com/v1/deliveries

# Roadie API (Tertiary Provider)
ROADIE_API_KEY=your_api_key
ROADIE_BASE_URL=https://api.roadie.com

# GoShare API (Bulk Provider)
GOSHARE_API_KEY=your_api_key
GOSHARE_BASE_URL=https://api.goshare.co

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/livhana_delivery

# Redis (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Maps API (for geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Secret (for auth)
JWT_SECRET=your_jwt_secret

# Logging
LOG_LEVEL=info
