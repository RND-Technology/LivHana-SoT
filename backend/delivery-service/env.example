# NASH-BEATING DELIVERY SERVICE CONFIGURATION
# Beats Nash/Square by eliminating intermediary costs

# Store Configuration
STORE_PHONE=+1-210-555-0100
NODE_ENV=production
PORT=4003

# Lightspeed Integration (Required)
LIGHTSPEED_API_TOKEN=your_lightspeed_token_here
LIGHTSPEED_WEBHOOK_SECRET=your_webhook_secret_here

# DoorDash Drive API (Priority 1 - Required)
DOORDASH_DEVELOPER_ID=your_developer_id_here
DOORDASH_KEY_ID=your_key_id_here
DOORDASH_SIGNING_SECRET=your_signing_secret_here

# Uber Direct API (Priority 2 - Required)
UBER_API_KEY=your_uber_api_key_here

# Optional Providers (Expand Later)
POSTMATES_API_KEY=your_postmates_api_key_here
GRUBHUB_API_KEY=your_grubhub_api_key_here

# Nash Cost Comparison (What We're Beating)
NASH_SQUARE_FEE_PERCENTAGE=2.9
NASH_SQUARE_FIXED_FEE=0.30
NASH_MARKUP_PERCENTAGE=20
NASH_AVERAGE_DELIVERY_COST=7.5

# Delivery Configuration
DELIVERY_RADIUS_MILES=35
DEFAULT_DELIVERY_TIME_MINUTES=45
MAX_DELIVERY_COST=15.00

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=https://reggieanddro.com,https://www.reggieanddro.com

# Database (Optional - for order tracking)
DATABASE_URL=postgresql://user:password@localhost:5432/delivery_service

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_PROVIDER_COMPARISON=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_AUTOMATIC_FAILOVER=true
ENABLE_COST_TRANSPARENCY=true
